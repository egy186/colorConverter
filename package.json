{
  "name": "colorconverter",
  "description": "Color Converter",
  "version": "0.4.0",
  "author": "egy186",
  "bugs": {
    "url": "https://github.com/egy186/colorconverter/issues"
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.3.13",
    "babelify": "^7.2.0",
    "bootstrap-sass": "^3.3.5",
    "browserify": "^12.0.1",
    "core-js": "^1.2.6",
    "eslint": "^1.10.3",
    "eslint-config-eslint": "^1.0.1",
    "jade": "^1.11.0",
    "minifyify": "^7.1.0",
    "mkdirp": "^0.5.1",
    "ncp": "^2.0.0",
    "node-sass": "^3.4.2",
    "rimraf": "^2.4.4"
  },
  "homepage": "https://egy186.github.io/colorconverter",
  "keywords": [
    "color",
    "convert"
  ],
  "license": "MIT",
  "private": true,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/egy186/colorconverter.git"
  },
  "scripts": {
    "build": "npm run build-css && npm run build-html && npm run build-js && npm run build-static",
    "build-css": "node-sass --include-path node_modules --output-style compressed --output dist/css --source-map true --source-map-contents src/sass",
    "build-html": "jade --obj package.json --out dist src/jade",
    "build-js": "mkdirp dist/js && browserify src/js/app.js --debug --plugin [ minifyify --map bundle.js.map --output dist/js/bundle.js.map ] --transform babelify --outfile dist/js/bundle.js",
    "build-static": "ncp src/static dist",
    "clean": "rimraf dist",
    "lint": "eslint src",
    "start": "npm run build"
  }
}
