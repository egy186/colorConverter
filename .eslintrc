{
  "ecmaFeatures": {
    "modules": true
  },
  "env": {
    "es6": true
  },
  "extends": "eslint",
  "rules": {
    "no-console": 2,
    "no-extra-parens": 2,
    "no-unexpected-multiline": 2,
    "valid-jsdoc": [2, {
      "prefer": {
        "return": "return"
      },
      "requireReturn": false
    }],

    "dot-location": [2, "property"],
    "no-new": 2,

    "camelcase": [2, { "properties": "always" }],
    "comma-spacing": 2,
    "comma-style": 2,
    "func-style": [2, "expression"],
    "indent": [2, 2, {
      "SwitchCase": 1,
      "VariableDeclarator": {
        "var": 2,
        "let": 2,
        "const": 3
      }
    }],
    "linebreak-style": 2,
    "no-multiple-empty-lines": 2,
    "object-curly-spacing": [2, "always"],
    "quotes": [2, "single", "avoid-escape"],
    "space-before-function-paren": [2, "always"],
    "space-before-keywords": 2,
    "space-in-parens": 2,

    "arrow-parens": [2, "as-needed"],
    "arrow-spacing": 2,
    "no-var": 2,
    "object-shorthand": 2,
    "prefer-arrow-callback": 2,
    "prefer-const": 2,
    "prefer-reflect": 2,
    "prefer-spread": 2
  }
}
